{
    "manifest_version": 2,
    "minimum_chrome_version": "91",
    "name": "Equicord Web",
    "description": "The other cutest Discord mod now in your browser",
    "author": "Thororen",
    "homepage_url": "https://github.com/Equicord/Equicord",
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.discord.com/*",
        "https://raw.githubusercontent.com/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": ["*://*.discord.com/*"],
            "js": ["content.js"],
            "all_frames": true,
            "world": "ISOLATED"
        },
        {
            "run_at": "document_start",
            "matches": ["*://*.discord.com/*"],
            "js": ["dist/Vencord.js"],
            "all_frames": true,
            "world": "MAIN"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "dist/Vencord.js",
        "dist/Vencord.css"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "Equicord@equicord.patrickdk.com",
            "strict_min_version": "91.0"
        }
    }
}
